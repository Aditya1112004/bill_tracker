<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Purchase Excel Preview</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- <a href="/purchase" style="position: absolute; left: 20px; top: 20px; text-decoration: none; font-size: 18px;">&larr; Back</a> -->
  <h1>Preview Purchase Excel</h1>
  <div style="margin-bottom: 20px; text-align: center;">
    <a href="/purchase/excel/download">
      <button style="font-size: 16px;">Download Excel</button>
    </a>
  </div>
  <table border="1" style="border-collapse: collapse; width: 90%; margin: 0 auto;">
    <thead>
      <tr>
        <th>Creditors</th>
        <th>Date</th>
        <th>Invoice No.</th>
        <th>Debit Amount</th>
        <th>Credit Amount</th>
        <th>Days</th>
        <th>Pending</th>
      </tr>
    </thead>
    <tbody>
      <% function daysBetweenToday(dateStr) {
  const d = new Date(dateStr);
  if (isNaN(d)) return '-';
  const today = new Date();
  today.setHours(0,0,0,0);
  d.setHours(0,0,0,0);
  return Math.floor((today - d) / (1000 * 60 * 60 * 24));
} %>
      <% purchases.sort((a, b) => new Date(b.date) - new Date(a.date)).reverse().forEach(entry => { %>
        <tr>
          <td><%= entry.creditors %></td>
          <td><%= entry.date %></td>
          <td><%= entry.invoice_no %></td>
          <td><%= entry.debit_amt ? entry.debit_amt : 0 %></td>
          <td><%= entry.credit_amt %></td>
          <td><%= daysBetweenToday(entry.date) %></td>
          <td><%= (entry.credit_amt - (entry.debit_amt ? entry.debit_amt : 0)).toFixed(2) %></td>
        </tr>
      <% }); %>
     
    </tbody>
  </table>
</body>
</html> 