<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Excel Preview</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- <a href="/sales" style="position: absolute; left: 20px; top: 20px; text-decoration: none; font-size: 18px;">&larr; Back</a> -->
  <h1>SALES PENDING DETAILS</h1>
  <div style="margin-bottom: 20px; text-align: center;">
    <a href="/sales/excel/download">
      <button style="font-size: 16px;">Download Excel</button>
      
    </a>
  </div>
  <table border="1" style="border-collapse: collapse; width: 90%; margin: 0 auto;">
    <thead>
      <tr>
        <th>Debtors</th>
        <th>Date</th>
        <th>Invoice No.</th>
        <th>Review</th>
        <th>Bill Amount</th>
        <th>Credit Day</th>
        <th>Received</th>
        <th>TDS</th>
        <th>Pending</th>
      </tr>
    </thead>
    <tbody>
      <% function daysBetweenToday(dateStr) {
  const d = new Date(dateStr);
  if (isNaN(d)) return '-';
  const today = new Date();
  today.setHours(0,0,0,0);
  d.setHours(0,0,0,0);
  return Math.floor((today - d) / (1000 * 60 * 60 * 24));
} %>
      <% sales.sort((a, b) => new Date(a.date) - new Date(b.date)).reverse().forEach(entry => { %>
        <tr>
          <td><%= entry.debtors %></td>
          <td><%= entry.date %></td>
          <td><%= entry.invoice_no %></td>
          <td><%= entry.review %></td>
          <td><%= entry.bill_amount %></td>
          <td><%= daysBetweenToday(entry.date) %></td>
          <td><%= entry.received %></td>
          <td><%= entry.tds ? entry.tds : 0 %></td>
          <td><%= ((entry.bill_amount - entry.received) - (entry.tds ? entry.tds : 0)).toFixed(2) %></td>
        </tr>
      <% }); %>
      
    </tbody>
  </table>
</body>
</html> 